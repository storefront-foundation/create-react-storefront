{
  "name": "create-react-storefront",
  "version": "7.1.1",
  "description": "A CLI for creating React Storefront apps.",
  "main": "index.js",
  "dependencies": {
    "chalk": "^2.4.2",
    "decompress": "^4.2.0",
    "download": "^7.1.0",
    "lodash": "^4.17.11",
    "ora": "^3.4.0",
    "prompts": "^1.1.0",
    "url-exists": "^1.0.3",
    "yargs": "^12.0.2"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "react-storefront"
  ],
  "author": "Moovweb",
  "license": "Apache-2.0",
  "preferGlobal": true,
  "bin": {
    "create-react-storefront": "./index.js"
  },
  "scripts": {
    "start": "node .",
    "release": "yarn publish",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"**/*.js\" \"!{node_modules,.next,.yalc}/**\""
  },
  "devDependencies": {
    "husky": "^4.0.10",
    "lint-staged": "^10.0.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "git add ."
    ]
  }
}
